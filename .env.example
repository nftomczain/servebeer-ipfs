# ServeBeer IPFS CDN - Environment Configuration
# Copy this file to .env and set your own values

# Flask Configuration
SECRET_KEY=change-this-in-production-very-important-secret-key
FLASK_ENV=development
FLASK_DEBUG=True

# Testing Mode (True for beta/testing, False for production)
TESTING_MODE=True

# IPFS Configuration
IPFS_API_URL=http://localhost:5001/api/v0
IPFS_GATEWAY_URL=http://localhost:8080/ipfs

# Database
DATABASE_PATH=database/servebeer.db

# Storage Limits (bytes)
FREE_TIER_LIMIT=262144000
PAID_TIER_LIMIT=1073741824

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Logging
LOG_LEVEL=INFO
AUDIT_LOG_PATH=logs/servebeer_audit.log
